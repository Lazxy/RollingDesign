        <!--<item name="android:backgroundDimEnabled">false</item> &lt;!&ndash;背景是否模糊显示&ndash;&gt;-->
    <!--</style>-->

    <!--Theme.AppCompat.Dialog有一段24dp的Padding和默认的24dp顶部空白，没有办法消除,故用该主题-->
    <style name="noPaddingDialog" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/normalWhite</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialogBackground</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
