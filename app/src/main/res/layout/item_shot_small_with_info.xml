<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@drawable/sel_lift_on_touch"
    android:id="@+id/layout_shot_container"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shot_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_shot_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_gif_36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/shot_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shot_preview"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentRight="true"
            >
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                />
            <TextView
                android:id="@+id/tv_shot_view"
                style="@style/TextWithIcon"
                android:drawableLeft="@drawable/iv_view_grey_16dp"
                android:text="2333"
                />
            <TextView
                android:id="@+id/tv_shot_comment"
                style="@style/TextWithIcon"
                android:drawableLeft="@drawable/iv_comment_grey_16dp"
                android:text="2333"/>
            <TextView
                android:id="@+id/tv_shot_like"
                style="@style/TextWithIcon"
                android:paddingRight="2dp"
                android:drawableLeft="@drawable/iv_like_grey_16dp"
                android:text="2333"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_author_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/shot_info"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/author_avatar"
                android:layout_width="@dimen/small_avatar_size"
                android:layout_height="@dimen/small_avatar_size"
                android:layout_marginRight="4dp"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="@color/normalWhite"
                fresco:placeholderImage="@drawable/avatar_default"
                />
            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Lazxy"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>