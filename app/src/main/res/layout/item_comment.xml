<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normalWhite"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_avatar"
            android:layout_width="@dimen/normal_avatar_size"
            android:layout_height="@dimen/normal_avatar_size"
            android:layout_gravity="top"
            android:layout_marginRight="16dp"
            app:roundAsCircle="true"
            app:roundWithOverlayColor="@color/normalWhite"
            app:placeholderImage="@drawable/avatar_default"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:textColor="@color/normalBlack"
            android:textSize="16sp"
            android:text="Jordan"
            />
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:singleLine="false"
            android:textColor="@color/lightBlack"
            android:textSize="14sp"
            android:text="That's a Nice work! I love it"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_comment_time_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                android:text="3小时前"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/text_grey"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_comment_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/iv_delete_grey_16dp"
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                android:text="删除"
                />
            <TextView
                android:id="@+id/tv_comment_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/iv_like_grey_16dp"
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                android:text="33"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>