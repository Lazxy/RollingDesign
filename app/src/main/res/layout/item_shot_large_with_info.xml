<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/normalWhite"
    android:stateListAnimator="@drawable/sel_lift_on_touch"
    android:id="@+id/layout_shot_container"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        >
        <LinearLayout
            android:id="@+id/layout_author_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/author_avatar"
                android:layout_width="@dimen/normal_avatar_size"
                android:layout_height="@dimen/normal_avatar_size"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="@color/normalWhite"
                fresco:placeholderImage="@drawable/avatar_default"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_shot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Robot"
                    />
                <TextView
                    android:id="@+id/tv_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_shot_title"
                    android:textSize="13sp"
                    android:textColor="@color/text_blue"
                    android:gravity="center_vertical"
                    android:text="Lazxy"
                    />
                <TextView
                    android:id="@+id/tv_shot_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_author_name"
                    android:layout_alignBaseline="@id/tv_author_name"
                    android:paddingLeft="8dp"
                    android:gravity="center"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:text="投递于2017.1.12"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/shot_entity"
            android:layout_below="@id/layout_author_info"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/shot_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/iv_shot_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_gif_36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/shot_info"
            android:layout_below="@id/shot_entity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/tv_shot_view"
                style="@style/TextWithIcon"
                android:drawableLeft="@drawable/iv_view_grey_16dp"
                android:text="2333"
                />
            <TextView
                android:id="@+id/tv_shot_comment"
                style="@style/TextWithIcon"
                android:drawableLeft="@drawable/iv_comment_grey_16dp"
                android:text="2333"/>
            <TextView
                android:id="@+id/tv_shot_like"
                style="@style/TextWithIcon"
                android:drawableLeft="@drawable/iv_like_grey_16dp"
                android:text="2333"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>